# Server Configuration
APP_NAME=Spark-Ops Control Plane
ENVIRONMENT=development
DEBUG=True
API_VERSION=v1
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://sparkops:sparkops123@localhost:5432/sparkops
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Key Configuration
API_KEY_SECRET=your-api-key-secret-change-in-production

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:8080,http://localhost:3000
CORS_ALLOW_CREDENTIALS=True

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# LangWatch Configuration
LANGWATCH_API_KEY=your-langwatch-api-key
LANGWATCH_ENDPOINT=https://api.langwatch.ai
LANGWATCH_PROJECT_ID=your-project-id

# AWS Configuration (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=sparkops-storage

# Monitoring Configuration
PROMETHEUS_PORT=9090
ENABLE_METRICS=True
LOG_LEVEL=INFO

# Agent Runtime Configuration
AGENT_MAX_CONCURRENT=100
AGENT_TIMEOUT_SECONDS=300
AGENT_RETRY_ATTEMPTS=3

# Workflow Configuration
WORKFLOW_MAX_STEPS=1000
WORKFLOW_TIMEOUT_SECONDS=3600

# Budget Configuration
BUDGET_CHECK_INTERVAL_SECONDS=60
BUDGET_ALERT_THRESHOLD=0.8

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@sparkops.ai

# Webhook Configuration
WEBHOOK_TIMEOUT_SECONDS=30
WEBHOOK_RETRY_ATTEMPTS=3

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=100
ALLOWED_UPLOAD_EXTENSIONS=.json,.yaml,.yml,.txt

# Feature Flags
ENABLE_WEBHOOKS=True
ENABLE_SCHEDULES=True
ENABLE_POLICIES=True
ENABLE_BUDGETS=True
